<h1>Create a Song</h1>

<%= form_for @song do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />

  <%= f.label :artist_name, "Artist's Name" %>
  <%= f.text_field :artist_name %>
  <br />

  <%= f.fields_for :genre, Genre.new do |genre| %>
    <%= genre.label :genre %>
    <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  <% end %>
  <br />

  <%= f.fields_for :notes do |note| %>
    <%= note.label :note %>
    <%= note.text_area :content, rows:3, columns:30 %>
  <% end %>

  <%= f.submit %>
<% end %>
